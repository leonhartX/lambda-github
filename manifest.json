{
  "version": "1.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "name": "__MSG_appName__",
  "short_name": "lambda-github",
  "author": "leonhartx.k@gmail.com",
  "description": "__MSG_appDesc__",
  "icons": {
    "16": "icon/icon.png",
    "48": "icon/icon.png",
    "128": "icon/icon.png"
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches":["https://*.console.aws.amazon.com/lambda/*"],
      "js":[
        "lib/jquery.min.js",
        "lib/diff.min.js",
        "lib/diff2html.min.js",
        "lib/diff2html-ui.min.js",
        "lib/highlight.min.js",
        "lambda-hub.js"
      ],
      "css":[
        "lib/diff2html.css",
        "lib/github.css"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'",
  "web_accessible_resources": [
    "lambda-hub.js",
    "options/options.html",
    "content/buttons.html",
    "content/modal.html",
    "content/alert.html"
  ],
  "permissions": [
    "https://*/",
    "webRequest",
    "storage",
    "declarativeContent"
  ]
}
