{
  "name": "lambda-hub",
  "version": "0.1.0",
  "manifest_version": 2,
  "author": "leonhartx.k@gmail.com",
  "description": "sync code between github and lambda(aws console)",
  "icons": {
    "16": "icon/icon.png",
    "48": "icon/icon.png",
    "128": "icon/icon.png"
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches":["https://*.console.aws.amazon.com/lambda/*"],
      "js":["lib/jquery.min.js", "lib/jszip.min.js", "lambda-hub.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'",
  "page_action": {
    "default_icon": "icon/icon.png",
    "default_title": "lambda-hub",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "lib/jquery.min.js",
    "lambda-hub.js"
  ],
  "permissions": [
    "https://ap-northeast-1.console.aws.amazon.com/",
    // "https://*.aws.amazon.com/",
    "https://ghe.rjbdev.jp/",
    "cookies",
    "webRequest",
    "storage",
    "declarativeContent",
    "activeTab"
  ]
}